# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# JWT Secret (CHANGE THIS IN PRODUCTION - make it long and random)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random

# Database (when you migrate from in-memory storage to PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/contentfabrica

# API Keys for External Services
HEYGEN_KEY=your_heygen_api_key_here
UPLOADPOST_KEY=your_uploadpost_api_key_here

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@contentfabrica.com

# Development Settings
# Set to 'true' to enable debug logging
DEBUG=false